<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Chitter</title>
  </head>
  <body>
    <div class="header">
      <h3><%= session[:user_name] %></h3>
    </div>
    <% @peeps.each do |peep| %>
        <div class="peep">
          <em><%= peep.time %></em>
          <p><%= peep.text %></p>
        </div>
    <% end %>
    <div class="peep_adder">
      <form action="/peeps/new" method="post">
        <label for="peep">Peep</label>
        <input type="text" name="peep">
        <input type="submit" value="Post">
      </form>
    </div>
    <form action="/sessions/<%= session[:current_user] %>" method="post">
      <input type="submit" value="Logout">
    </form>
  </body>
</html>
